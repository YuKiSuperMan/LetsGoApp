<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_bottom"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_d9"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_cancel_order"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_cc_solid_r5_p8"
                    android:gravity="center"
                    android:text="取消订单"
                    tools:visibility="gone"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/btn_refund"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_cc_solid_r5_p8"
                    android:gravity="center"
                    tools:visibility="gone"
                    android:text="退款"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/btn_delete"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_cc_solid_r5_p8"
                    android:gravity="center"
                    tools:visibility="gone"
                    android:text="删除"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/btn_call_guide"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_1f92ff_solid_r5_p8"
                    android:gravity="center"
                    tools:visibility="gone"
                    android:text="联系导游"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/btn_call_custom"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_theme_solid_r5_p8"
                    android:gravity="center"
                    tools:visibility="gone"
                    android:text="联系客服"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/btn_pay"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_theme_solid_r5_p8"
                    android:gravity="center"
                    android:text="付款"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/btn_evaluate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_theme_solid_r5_p8"
                    android:gravity="center"
                    android:text="评价"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/btn_evaluate_see"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:background="@drawable/btn_theme_solid_r5_p8"
                    android:gravity="center"
                    android:text="查看评价"
                    android:textColor="@color/white" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_view_bg_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white_solid_r5"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                    <TextView
                            android:id="@+id/tv_guide_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:drawableLeft="@mipmap/ic_order_title"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="那就走"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="待付款"
                            android:textColor="@color/color_red"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_d9"/>

                    <com.njz.letsgoapp.widget.FixedItemTextView
                        android:id="@+id/fixed_view_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:login_item_title_color="@color/color_99"
                        app:login_item_title="目的地"
                        app:login_item_title_width="80dp" />

                    <com.njz.letsgoapp.widget.FixedItemEditView
                        android:id="@+id/login_view_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:login_item_hint="请输入联系人"
                        app:login_item_max_length="5"
                        app:login_item_title_color="@color/color_99"
                        app:login_item_title="联系人"
                        app:login_item_title_width="80dp" />

                    <com.njz.letsgoapp.widget.FixedItemEditView
                        android:id="@+id/login_view_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:login_item_hint="请输入联系方式"
                        app:login_item_max_length="11"
                        app:login_item_title_color="@color/color_99"
                        app:login_item_title="联系方式"
                        app:login_item_title_width="80dp" />

                    <com.njz.letsgoapp.widget.SpecialFixedItemEditView
                        android:id="@+id/et_special"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:login_item_title_color="@color/color_99"
                        app:login_item_hint="请输入其他需求。（选填）"
                        app:login_item_max_length="200"
                        app:login_item_title="特殊要求"
                        app:login_item_title_width="80dp"/>
                </LinearLayout>

            </FrameLayout>

            <include layout="@layout/base_recycler_view_layout" />


            <FrameLayout
                android:id="@+id/cv_refund_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_view_bg_10"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_99"
                            android:text="退款原因" />

                        <TextView
                            android:id="@+id/tv_refund_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:text="agaegaeg" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_99"
                            android:text="退款说明" />

                        <TextView
                            android:id="@+id/tv_refund_explain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="3"
                            android:minLines="1"
                            android:text="agaegaegagaaegaeg" />

                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rl_order_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_99"
                            android:text="合计" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/color_theme"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_order_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_theme"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_refund_used_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_99"
                            android:text="已消费金额" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/color_theme"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_refund_used_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_theme"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_refund_penalty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_99"
                            android:text="违约金" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/color_ff4000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_refund_penalty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_ff4000"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_refund_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_99"
                            android:text="退款总金额" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/color_theme"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_refund_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_theme"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_view_bg_10">

                <include layout="@layout/layout_order_info" />

            </FrameLayout>




        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</FrameLayout>



