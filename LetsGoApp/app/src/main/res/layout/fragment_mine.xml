<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/parent_background"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/iv_backimg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/bg_home_my" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/card_view_bg_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/default_head" />


                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_theme_hollow_r5"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="40dp"
                        android:text="点击登录"
                        tools:visibility="gone"
                        android:textColor="@color/color_theme" />


                    <LinearLayout
                        android:id="@+id/ll_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/iv_head"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="那就走就那就走就那就走就那就走就" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_fans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:text="5000粉丝"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/tv_follow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:text="330关注"
                                    android:textSize="12dp" />

                            </LinearLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:id="@+id/tv_space"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:drawablePadding="10dp"
                                android:drawableRight="@mipmap/ic_arrow_right"
                                android:text="个人主页" />


                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>


            </FrameLayout>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/card_view_bg_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_head"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <com.njz.letsgoapp.widget.MineItemView2
                    android:id="@+id/mine_bind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:home_my_item2_left_drawable="@mipmap/ic_mine_mobile"
                    app:home_my_item2_right_drawable="@mipmap/ic_arrow_right"
                    app:home_my_item2_title="绑定手机" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/color_d9"/>

                <com.njz.letsgoapp.widget.MineItemView2
                    android:id="@+id/mine_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:home_my_item2_left_drawable="@mipmap/ic_mine_info"
                    app:home_my_item2_right_drawable="@mipmap/ic_arrow_right"
                    app:home_my_item2_title="个人资料" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/color_d9"/>

                <com.njz.letsgoapp.widget.MineItemView2
                    android:id="@+id/mine_modify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:home_my_item2_left_drawable="@mipmap/ic_mine_password"
                    app:home_my_item2_right_drawable="@mipmap/ic_arrow_right"
                    app:home_my_item2_title="修改密码" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/color_d9"/>

                <com.njz.letsgoapp.widget.MineItemView2
                    android:id="@+id/mine_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:home_my_item2_left_drawable="@mipmap/ic_mine_coupon"
                    app:home_my_item2_right_drawable="@mipmap/ic_arrow_right"
                    app:home_my_item2_title="我的优惠卷" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/color_d9"/>

                <com.njz.letsgoapp.widget.MineItemView2
                    android:id="@+id/mine_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:home_my_item2_left_drawable="@mipmap/ic_mine_comment"
                    app:home_my_item2_right_drawable="@mipmap/ic_arrow_right"
                    app:home_my_item2_title="我的评论" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/card_view_bg_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_head"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <com.njz.letsgoapp.widget.MineItemView2
                    android:id="@+id/mine_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:home_my_item2_left_drawable="@mipmap/ic_mine_phone"
                    app:home_my_item2_right_drawable="@mipmap/ic_arrow_right"
                    app:home_my_item2_title="联系我们" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/color_d9"/>

                <com.njz.letsgoapp.widget.MineItemView2
                    android:id="@+id/mine_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:home_my_item2_left_drawable="@mipmap/ic_mine_setting"
                    app:home_my_item2_right_drawable="@mipmap/ic_arrow_right"
                    app:home_my_item2_title="设置" />
            </LinearLayout>


        </FrameLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
