                android:layout_height="wrap_content"
                android:background="@drawable/btn_black_hollow_p5"
                android:gravity="center"
                android:text="不限" />

            <TextView
                android:id="@+id/tv_sex_man"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_black_hollow_p5"
                android:gravity="center"
                android:text="男" />

            <TextView
                android:id="@+id/tv_sex_lady"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_black_hollow_p5"
                android:gravity="center"
                android:text="女" />

        </LinearLayout>


        <TextView
