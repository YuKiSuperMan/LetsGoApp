                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_black_hollow_p5"
                android:gravity="center"
                android:text="18-25" />

            <TextView
                android:id="@+id/tv_age_26"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
