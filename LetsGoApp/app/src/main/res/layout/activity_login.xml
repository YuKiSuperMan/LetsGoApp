<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:text="手机号登陆"
        android:textSize="24sp" />

    <com.njz.letsgoapp.widget.LoginItemView
        android:id="@+id/login_view_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:login_item_hint="请输入手机号"
        app:login_item_max_length="11"
        app:login_item_title="手机号"
        app:login_item_title_width="50dp" />


    <com.njz.letsgoapp.widget.LoginItemView
        android:id="@+id/login_view_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:login_item_hint="请输入密码"
        app:login_item_max_length="16"
        app:login_item_title="密码"
        app:login_item_title_width="50dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/btn_blue_solid_r40"
        android:text="登陆"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/tv_verify_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="验证码登陆" />

        <TextView
            android:id="@+id/tv_forgett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="忘记密码" />

    </RelativeLayout>


</LinearLayout>