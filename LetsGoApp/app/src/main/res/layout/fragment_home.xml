<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_city_pick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_city_down"
            android:gravity="center"
            android:text="张家界" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/iv_release"
            android:background="@drawable/btn_ee_solid_r40"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:drawableLeft="@mipmap/ic_search"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="搜索目的地/向导/玩法"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/gray_999" />

        </LinearLayout>

    </LinearLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/convenientBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"
                    app:canLoop="true" />

                <!--公告-->
                <LinearLayout
                    android:id="@+id/notice_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/convenientBanner"
                    android:background="#ffe6d5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_text_banner_title" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white" />

                    <ViewFlipper
                        android:id="@+id/view_flipper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:inAnimation="@anim/bottom_in"
                        android:outAnimation="@anim/top_out" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_text_banner_more"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- grid -->
                <LinearLayout
                    android:id="@+id/ll_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notice_ll"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_grid_guide"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/grid_guide"
                            android:gravity="center"
                            android:text="向导陪游" />

                        <TextView
                            android:id="@+id/tv_grid_car"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/grid_car"
                            android:gravity="center"
                            android:text="包车接送" />

                        <TextView
                            android:id="@+id/tv_grid_feature"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/grid_feature"
                            android:gravity="center"
                            android:text="特色体验" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_grid_custom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/grid_custom"
                            android:gravity="center"
                            android:text="私人定制" />

                        <TextView
                            android:id="@+id/tv_grid_hotel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/grid_hotel"
                            android:gravity="center"
                            android:text="代订酒店" />

                        <TextView
                            android:id="@+id/tv_grid_ticket"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/grid_ticket"
                            android:gravity="center"
                            android:text="代订门票" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 优选向导 -->
                <LinearLayout
                    android:id="@+id/ll_view_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_grid"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <RelativeLayout
                        android:id="@+id/rl_guide_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="18sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7dp"
                            android:background="@color/color_theme" />

                        <TextView
                            android:id="@+id/tv_guide_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:text="优选向导"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="8dp"
                            android:drawableRight="@mipmap/ic_arrow_right"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="查看全部"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_trip"
                            android:background="@color/white"
                            android:overScrollMode="never"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp" />

                        <com.njz.letsgoapp.widget.emptyView.EmptyView2
                            android:id="@+id/view_empty_guide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_view_h"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="18sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7dp"
                            android:background="@color/color_theme" />

                        <TextView
                            android:id="@+id/tv_dynamic_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:text="当地必玩"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                        <include layout="@layout/base_recycler_view_layout" />

                        <com.njz.letsgoapp.widget.emptyView.EmptyView2
                            android:id="@+id/view_empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>

