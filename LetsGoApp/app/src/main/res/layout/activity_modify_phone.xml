<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:text="修改手机号"
        android:textSize="24sp" />


    <com.njz.letsgoapp.widget.LoginItemView
        android:id="@+id/login_view_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:login_item_hint="请输入密码"
        app:login_item_max_length="16"
        app:login_item_title="密码"
        app:login_item_title_width="50dp" />


    <com.njz.letsgoapp.widget.LoginItemView
        android:id="@+id/login_view_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:login_item_hint="请输入手机号"
        app:login_item_max_length="11"
        app:login_item_title="手机号"
        app:login_item_title_width="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.njz.letsgoapp.widget.LoginItemView
            android:id="@+id/login_view_verify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:login_item_hint="请输验证码"
            app:login_item_max_length="6"
            app:login_item_title="验证码"
            app:login_item_title_width="50dp" />

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_blue_solid_r5_p8"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="获取验证码"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/btn_blue_solid_r40_p8"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>