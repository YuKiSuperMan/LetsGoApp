<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/icon_back" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/iv_left"
            android:background="@drawable/btn_gray_solid_r15">


            <TextView
                android:id="@+id/tv_city_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_arrow_down"
                android:paddingLeft="10dp"
                android:text="张家界"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_999" />


            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_search"
                android:drawablePadding="10dp"
                android:text="搜索导游"
                android:textColor="@color/gray_999"
                android:textSize="14sp"

                />


        </LinearLayout>


    </RelativeLayout>

    <com.njz.letsgoapp.widget.MyGuideTab
        android:id="@+id/my_guide_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/base_swiperefresh_layout" />

</LinearLayout>