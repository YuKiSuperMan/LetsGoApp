<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/icon_back" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="向导列表"
            android:gravity="center"
            android:textColor="@color/color_text"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/tv_city_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_arrow_down"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_99_hollow_r3_p5"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="张家界"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d9"/>

    <com.njz.letsgoapp.widget.MyGuideTab
        android:id="@+id/my_guide_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/base_swiperefresh_layout" />

</LinearLayout>