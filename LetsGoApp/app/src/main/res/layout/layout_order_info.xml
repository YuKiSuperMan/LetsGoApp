<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_order_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;"
            android:textColor="@color/color_99" />

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="sdgag3q3q3"
            android:textColor="@color/color_99" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;"
            android:textColor="@color/color_99" />

        <TextView
            android:id="@+id/tv_order_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="sdgag1234133q3q3"
            android:textColor="@color/color_99" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_pay_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款时间&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;"
            android:textColor="@color/color_99" />

        <TextView
            android:id="@+id/tv_order_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="sdgag3q3q3"
            android:textColor="@color/color_99" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_pay_method"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款方式&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;"
            android:textColor="@color/color_99" />

        <TextView
            android:id="@+id/tv_order_pay_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="sdgag3q3q3"
            android:textColor="@color/color_99" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_guide_time"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导游确认时间"
            android:textColor="@color/color_99" />

        <TextView
            android:id="@+id/tv_order_guide_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="sdgag3q3q3"
            android:textColor="@color/color_99" />

    </LinearLayout>

</LinearLayout>
