<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_gray_solid_r5"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/service_default_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_weight="1"
            tools:text="阿萨德卡开始党纪国法阿里独守空房吉安市领导发斯蒂芬按时发电量复健科爱上了" />


        <TextView
            android:id="@+id/service_default_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="￥240"
            android:textColor="@color/color_price" />

        <TextView
            android:id="@+id/service_default_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_solid_r5_p5"
            android:text="取消"
            android:textColor="@color/white" />

    </LinearLayout>




</LinearLayout>