<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/btn_white_r5_bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总额：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_red" />

            <TextView
                android:id="@+id/tv_order_price_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2600"
                android:textColor="@color/color_red" />

        </LinearLayout>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel_order"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_99_hollow_r3_p5"
                android:gravity="center"
                android:text="取消订单" />

            <TextView
                android:id="@+id/btn_refund"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_99_hollow_r3_p5"
                android:gravity="center"
                android:text="退款" />

            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_99_hollow_r3_p5"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/color_99" />

            <TextView
                android:id="@+id/btn_call_guide"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_2585e7_hollow_r3_p5"
                android:gravity="center"
                android:text="联系导游"
                android:textColor="@color/color_2585e7" />


            <TextView
                android:id="@+id/btn_call_customer"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_theme_hollow_r3_p5"
                android:gravity="center"
                android:text="联系客服"
                android:textColor="@color/color_theme" />


            <TextView
                android:id="@+id/btn_pay"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_theme_solid_r3_p5"
                android:gravity="center"
                android:text="付款"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn_evaluate"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_theme_hollow_r3_p5"
                android:gravity="center"
                android:text="评价"
                android:textColor="@color/color_theme" />

        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>