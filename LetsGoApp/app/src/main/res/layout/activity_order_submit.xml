<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_view_bg_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.njz.letsgoapp.widget.FixedItemTextView
                        android:id="@+id/fixed_view_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:login_item_title="目的地"
                        app:login_item_title_color="@color/color_99"
                        app:login_item_title_width="80dp" />

                    <com.njz.letsgoapp.widget.FixedItemEditView
                        android:id="@+id/login_view_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:login_item_hint="请输入联系人"
                        app:login_item_max_length="5"
                        app:login_item_title_color="@color/color_99"
                        app:login_item_title="联系人"
                        app:login_item_right_drawable="@mipmap/edit_cancel"
                        app:login_item_title_width="80dp" />

                    <com.njz.letsgoapp.widget.FixedItemEditView
                        android:id="@+id/login_view_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:login_item_hint="请输入联系方式"
                        app:login_item_max_length="11"
                        app:login_item_title_color="@color/color_99"
                        app:login_item_right_drawable="@mipmap/edit_cancel"
                        app:login_item_title="联系方式"
                        app:login_item_title_width="80dp" />

                    <com.njz.letsgoapp.widget.SpecialFixedItemEditView
                        android:id="@+id/et_special"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:login_item_title_color="@color/color_99"
                        app:login_item_hint="请输入其他需求。（选填）"
                        app:login_item_right_drawable="@mipmap/edit_cancel"
                        app:login_item_max_length="200"
                        app:login_item_title="特殊要求"
                        app:login_item_title_width="80dp"/>

                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/base_recycler_view_layout" />

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_white_solid_r5">

                <TextView
                    android:id="@+id/tv_contract"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/ic_register_read"
                    android:drawablePadding="3dp"
                    android:padding="5dp"
                    android:text="@string/guide_service_contract" />


            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:layout_height="50dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_d9"/>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_theme_solid_r5"
            android:gravity="center"
            android:text="提交订单（￥0）"
            android:textColor="@color/white" />

    </LinearLayout>



</FrameLayout>



