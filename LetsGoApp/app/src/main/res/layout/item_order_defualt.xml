<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/btn_black_hollow"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/head_default" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/iv_img"
        android:layout_toStartOf="@+id/btn_cancel"
        android:maxLines="2"
        android:layout_marginRight="5dp"
        tools:text="那就走标题那就走标题那就走标题那就走标题那就那就走标题那就走标题那就走标题那就走标题那就走标题那就走标题" />

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue_solid_r5_p5"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:text="取消"/>


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="￥260"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_toEndOf="@+id/iv_img"
        android:layout_marginLeft="5dp"
        android:textColor="@color/color_price"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_centerHorizontal="true"
        tools:text="x4天"/>

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="￥1260"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/color_price"/>

</RelativeLayout>